{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", "build/**"],
      "env": ["DATABASE_URL"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["DATABASE_URL"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": ["DATABASE_URL"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "env": ["DATABASE_URL"]
    }
  }
}
